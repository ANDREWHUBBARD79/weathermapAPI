@model Gadget

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateGadgetToDatabase", "Gadget", "Post"))
{
    <input asp-for="GadgetID" type="hidden" value="@Model.GadgetID" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />

    <input type="submit" value="Update Gadget" class="btn btn-primary" />
}
