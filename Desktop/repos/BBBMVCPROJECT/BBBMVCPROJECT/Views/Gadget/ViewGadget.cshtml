@model Gadget

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        <th>Gadget ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>StockLevel</th>
    </tr>
    <tr>
        <td>@Model.GadgetID</td>
        <td>@Model.Name</td>
        <td>@Model.Price</td>
        <td>@Model.CategoryID</td>
        <td>@Model.OnSale</td>
        <td>@Model.StockLevel</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Gadget/UpdateGadget/@Model.GadgetID">Update this Gadget</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteGadget", "Gadget", "Post"))
    {
        <input type="hidden" asp-for="GadgetID" value="@Model.GadgetID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>